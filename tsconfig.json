{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "target": "es2016",
        "strict": true,
        "esModuleInterop": true,
        "incremental": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "paths": {
            "@media-stream/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
